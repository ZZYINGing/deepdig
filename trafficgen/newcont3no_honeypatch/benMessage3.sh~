#!/bin/bash


for i in {0..200}
do
ssh -i ./server.pem softseclab@10.176.147.83 sudo sysdig -w stream-$i.scap -z -s 4096 &

ssh -i ./server.pem softseclab@10.176.147.83 sudo nohup tcpdump -i eth0 -s0 -w stream-$i.cap port not 22 and port not 3490 and port not 3492 and port not 3790 and port not 80 >pdump.out &
sleep 5
curl -k https://10.176.147.83/cgi-bin/ss2


sleep 5

ssh -i ./server.pem softseclab@10.176.147.83 sudo nohup killall -9 sysdig 
ssh -i ./server.pem softseclab@10.176.147.83 sudo nohup killall -9 tcpdump




sleep 4
done



