#!/bin/bash

for i in 1 2 3 4 5 7 8 9 10 11 12
do
./attacker$i.sh 

#frontend attack 1
mkdir /home/gbaduz/Downloads/latestpoc/april30/netattacker$i
scp -i ./server.pem softseclab@10.176.147.83:stream*.cap /home/gbaduz/Downloads/latestpoc/april30/netattacker$i
mkdir /home/gbaduz/Downloads/latestpoc/april30/sysattacker$i
scp -i ./server.pem softseclab@10.176.147.83:stream*.scap /home/gbaduz/Downloads/latestpoc/april30/sysattacker$i


#decoy attack 1
mkdir /home/gbaduz/Downloads/latestpoc/april30/netattackerdecoy$i
scp -i ./server.pem softseclab@10.176.147.83:/var/lib/libhp/.mon/*CVE*.pcap /home/gbaduz/Downloads/latestpoc/april30/netattackerdecoy$i
mkdir /home/gbaduz/Downloads/latestpoc/april30/sysattackerdecoy$i
scp -i ./server.pem softseclab@10.176.147.83:/var/lib/libhp/.mon/*CVE*.scap /home/gbaduz/Downloads/latestpoc/april30/sysattackerdecoy$i
sleep 2
ssh -i ./server.pem softseclab@10.176.147.83 rm stream*
ssh -i ./server.pem softseclab@10.176.147.83 sudo rm -f /var/lib/libhp/.mon/*CVE*
sleep 2

done


for i in 1 2
do

./benMessage$i.sh 

#frontend benign 1
mkdir /home/gbaduz/Downloads/latestpoc/april30/netbenign$i
scp -i ./server.pem softseclab@10.176.147.83:stream*.cap /home/gbaduz/Downloads/latestpoc/april30/netbenign$i
mkdir /home/gbaduz/Downloads/latestpoc/april30/sysbenign$i
scp -i ./server.pem softseclab@10.176.147.83:stream*.scap /home/gbaduz/Downloads/latestpoc/april30/sysbenign$i
sleep 2
ssh -i ./server.pem softseclab@10.176.147.83 rm stream*

sleep 2

done



